<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
            android:background="@color/white"  >

    <ListView
        android:id="@+id/notifview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
>
    </ListView>

 <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
                        android:background="#F86960"
        android:orientation="horizontal"
        android:gravity="center" 
        android:paddingTop="2dp"
        
        >
        
        <ImageButton
            android:id="@+id/homebuttonnotifpage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingRight="0dip"
            android:layout_weight="1"
            android:src="@drawable/homeunclicked" />

        <ImageButton
            android:id="@+id/explorebuttonnotifpage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingRight="0dip"
            android:layout_weight="1"
            android:src="@drawable/explorerunclicked" />

        
        <ImageButton
            android:id="@+id/postbuttonnotifpage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingRight="0dip"
            android:layout_weight="1"
            android:src="@drawable/record" />

        <ImageButton
            android:id="@+id/notificationbuttonnotifpage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingRight="0dip"
            android:layout_weight="1"
            android:src="@drawable/notificationclicked" />


        <ImageButton
            android:id="@+id/profilebuttonnotifpage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingRight="0dip"
            android:layout_weight="1"
            android:src="@drawable/profilebuttonunclicked" />

    </LinearLayout>
</RelativeLayout>
